# ===========================================
# 数据库配置 Database Configuration
# ===========================================

# 数据库类型 (sqlite/mysql/postgresql)
# Database type: sqlite, mysql, postgresql
DB_TYPE=MySQL

# 数据库驱动 Database Driver
# sqlite: sqlite (默认)
# mysql: pymysql, mysqlclient
# postgresql: psycopg2, asyncpg
DB_DRIVER=pymysql

# ===========================================
# SQLite 数据库配置 SQLite Configuration
# ===========================================
# SQLite 数据库文件路径 (相对或绝对路径)
# SQLite database file path (relative or absolute)
SQLITE_DATABASE=./dash_admin.db

# ===========================================
# MySQL 数据库配置 MySQL Configuration
# ===========================================
# MySQL 服务器地址 MySQL server host
MYSQL_HOST=localhost
# MySQL 服务器端口 MySQL server port
MYSQL_PORT=3306
# MySQL 用户名 MySQL username
MYSQL_USER=root
# MySQL 密码 MySQL password
MYSQL_PASSWORD=123456
# MySQL 数据库名 MySQL database name
MYSQL_DATABASE=dash_admin
# MySQL 字符集 MySQL charset
MYSQL_CHARSET=utf8mb4

# ===========================================
# PostgreSQL 数据库配置 PostgreSQL Configuration
# ===========================================
# PostgreSQL 服务器地址 PostgreSQL server host
POSTGRES_HOST=localhost
# PostgreSQL 服务器端口 PostgreSQL server port
POSTGRES_PORT=5432
# PostgreSQL 用户名 PostgreSQL username
POSTGRES_USER=postgres
# PostgreSQL 密码 PostgreSQL password
POSTGRES_PASSWORD=
# PostgreSQL 数据库名 PostgreSQL database name
POSTGRES_DATABASE=dash_admin

# ===========================================
# 数据库连接池配置 Database Pool Configuration
# ===========================================
# 连接池大小 Pool size
DB_POOL_SIZE=5
# 连接池最大溢出数量 Max overflow connections
DB_POOL_MAX_OVERFLOW=10
# 连接池超时时间(秒) Pool timeout in seconds
DB_POOL_TIMEOUT=30
# 连接回收时间(秒) Connection recycle time in seconds
DB_POOL_RECYCLE=3600

# ===========================================
# 数据库调试配置 Database Debug Configuration
# ===========================================
# 是否显示SQL语句 (true/false) Show SQL statements
DB_ECHO=false
# 是否显示SQL执行时间 (true/false) Show SQL execution time
DB_ECHO_POOL=false
# 是否监控连接池 (true/false) Monitor connection pool
DB_MONITOR_POOL=false
# 是否开启内存调试 (true/false) Enable memory debugging
DB_DEBUG_MEMORY=false

# ===========================================
# 其他配置 Other Configuration
# ===========================================
ENV="development"  # 环境变量，可选值：development, production, testing